<%= render "layouts/errors", :object => @image %>

<%= form_for @image do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
